{
  "name": "LoopPay",
  "version": "0.1.0",
  "description": "Automated recurring invoices and pull-based payments on Base (Mainnet & Sepolia)",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network baseSepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network base",
    "verify": "hardhat verify --network base",
    "release": "pnpm build && pnpm test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^2.3.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@coinbase/onchainkit": "latest",
    "ethers": "^6.8.1",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "hardhat": "^2.22.4",
    "typescript": "^5.4.5",
    "ts-node": "^10.9.2",
    "@types/node": "^20.11.19"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stas-ivanovich/LoopPay"
  },
  "author": "stas-ivanovich",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
